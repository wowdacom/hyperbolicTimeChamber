light-blue = #1469ff
deep-blue = #0027c8
pink = #ff3c82

center()
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

star-top()
    width 365px
    border-style solid
    border-width 135px 80px 0px 80px
    border-color pink transparent transparent transparent
    position relative

star-before()
    content ''
    position absolute
    top -194px
    left calc(50% - 40px)
    border-style solid
    border-width 0px 40px 60px 40px
    border-color transparent transparent pink transparent

/* reset */

* {
  box-sizing: border-box;
}
html, body {
  margin: 0px;
  background-color: #F2F2F2;
  min-height: 100vh;
}
ul {
  margin: 0px;
  padding: 0px;
}
li {
  list-style: none;
}
a {
  color: inherit;
  text-decoration: none;
}
h1, h2, h3, h4, h5, p {
  margin: 0px;
}
input:focus, textarea:focus select:focus {
  outline: none;
}
table, caption, tbody, tfoot, thead, tr, th, td {
  margin: 0;
  padding: 0;
  border: 0;
  font-size: 100%;
  font: inherit;
  vertical-align: baseline;
}
table {
  border-collapse: collapse;
  border-spacing: 0;
}

/* Project Startup */
html, body {
  font-family: 'Roboto'
  color: white
}

/* tools */
.hidden {
  display none !important  
}

.opening {
  width 100vw
  height 100vh
  background light-blue
  .square {
      center()
      z-index 8
      width 400px
      height 400px
      background-color black
  }
  .circle {
      center()
      width 500px
      height 500px
      border-radius 50%
      background-color deep-blue
      z-index 9
  }
  .star {
      z-index 10
      center()
      &-top {
          star-top()
          &:before {
            star-before()
          }
      }
      &-bottom {
          star-top()
          transform rotate(180deg)
          &:before {
            star-before()
          }
      }
  }
  .text-block {
    center()
    z-index 11
    text-align center
    .title {
      font-weight 700
      font-size 64px
    }
    .title-describe {
        font-size 24px
        margin-top 20px
    }
  }
}

.screenQ1 {
  width 100vw
  height 100%
  background-color pink
  position relative
  transition background 0.5s
  .text-block {
    center()
    z-index 11
    text-align center
    .title {
      font-weight 700
      font-size 64px
    }
    .title-describe {
        font-size 24px
        margin-top 20px
    }
  }
  .question-section {
    opacity 0
    background-color light-blue
    height 100%
    width 60%
    &-wrapper {
      width 60%
      padding 40px 30px
      margin 0 auto
    }

    &-number {
      font-weight 900
      margin-top 46px
      font-size 64px
      link-height 75px
      color pink
    }

    &-question {
      font-weight 700
      font-size 36px
      line-height 48px
      margin-top 10px
    }

    &-describe {
      color deep-blue
      margin-top 16px
      margin-bottom 50px
      font-size 24px
      line-height 1.5em
    }

    &-options {
      ul {
        li {
          border solid 2px white
          border-radius 30.5px
          line-height 56px
          margin-bottom 16px
          text-align center
          font-size 20px
          cursor pointer
          transition all 0.4s
          &:hover {
            background-color white
            color light-blue
          }
        }
      }
    }
  }

  .animation-section {
      position absolute 
      top 0
      right 0
      bottom 0
      left 100%
      background-color deep-blue

      &-square {
          width 200px
          height 200px
          background-color pink 
          position absolute
          top 100%
          left 50px
      }
      &-triangle {
          width 0
          height 0
          border-style solid 
          border-width 0px 70px 120px 70px
          border-color transparent transparent white transparent
          position absolute
          top calc(100vh + 100px)
          right -20px
      }

      &-circle {
          width 400px
          height 400px
          border-radius 50%
          background-color black
          position absolute
          bottom -900px
          right -50px
      }
    }
}

